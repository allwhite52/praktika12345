<Window x:Class="praktika12345.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktika12345"
        mc:Ignorable="d"
           Title="Авторизация" Height="300" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин" HorizontalAlignment="Left" Margin="10,0"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Height="30" Margin="10"/>
            <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,0"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30" Margin="10"/>
            <Button Content="Войти" Width="200" Height="30" Margin="10" Click="LoginButton_Click"/>
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
